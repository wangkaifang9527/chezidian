.warrant{
  color: #fff;
  letter-spacing: 2rpx;
  padding: 20rpx;
}
.title{
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  padding: 20rpx;
}
.title_yi{
  font-size: 44rpx;
  text-align: center;
  
}
.title_er{
  font-size: 24rpx;
  margin-top: 20rpx;
}
.title_san{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.title_si{
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: center
}
.title_wu{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  margin-top: 15rpx;
}
.title_wu_left{
  border: 1rpx dashed #fff;
