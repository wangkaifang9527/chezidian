  font-size: 40rpx;
  padding: 0 20rpx;
}
.price{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  font-size: 47rpx;
  padding: 20rpx 40rpx;
  text-align: center;
}
.input-placeholder{
  color: #fff;
  text-align: center;
  
}

.ispingtai{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  margin-top: 48rpx;
  padding: 0 20rpx;
}
.image2{
  width: 28rpx;
  height: 28rpx;
}

.quding{
  padding: 0 20rpx;
}
.quding view{
  border: 1rpx solid #fff;
  padding: 29rpx 0rpx;
  text-align: center;
  font-size: 25rpx;
  margin-top: 175rpx;
  border-radius: 10rpx;
}
